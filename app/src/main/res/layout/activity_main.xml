<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.elements.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/earth_button_view"
            android:background="#FFA726"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:text="@string/earth"
            android:onClick="clickEarth"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/fire_button_view"
            android:background="#F44336"
            android:layout_marginLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:text="fire"
            android:onClick="clickFire"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/water_button_view"
            android:background="#03A9F4"
            android:layout_marginLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:text="water"
            android:onClick="clickWater"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/air_button_view"
            android:background="#C6FF00"
            android:layout_marginLeft="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:textSize="16sp"
            android:text="air"
            android:onClick="clickAir"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/element_image_view"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@drawable/earth3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HeaderTextStyle"
                    android:id="@+id/element_text_view"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@id/element_image_view"
                    android:text="@string/earth_title"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/earth_represents"
                    android:id="@+id/elementdescription_text_view"
                    android:layout_toRightOf="@id/element_image_view"
                    android:layout_below="@id/element_text_view"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/HeaderTextStyle"
                    android:id="@+id/characteristics_text_view"
                    android:text="@string/characteristics"
                    android:layout_toRightOf="@id/element_image_view"
                    android:layout_below="@id/elementdescription_text_view"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/element_characteristics_text_view"
                    android:text="@string/earth_characteristic"
                    android:layout_toRightOf="@id/element_image_view"
                    android:layout_below="@id/characteristics_text_view"
                    android:layout_marginTop="8dp"/>

            </RelativeLayout>

            <LinearLayout android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/HeaderTextStyle"
                android:layout_margin="8dp"
                android:text="@string/character"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/element_name_text_view"
                android:textColor="#000000"
                android:background="#FFA726"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:textSize="16sp"
                android:text="@string/melancholic"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                style="@style/HeaderTextStyle"
                android:text="@string/positive"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/positive_characteristics_text_view"
                    android:layout_margin="8dp"
                    android:maxLength="250"
                    android:text="@string/earth_positive_qualities"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    style="@style/HeaderTextStyle"
                    android:text="@string/negative"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:maxLength="250"
                    android:id="@+id/negative_characteristics_text_view"
                    android:text="@string/earth_negative_qualities"/>

            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginTop="16dp"
                android:onClick="sendIt"
                android:text="send it to me"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
